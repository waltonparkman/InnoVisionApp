modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Run Flask App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Add Sample Courses"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Check User"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Initialize Migration"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test DB Connection"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Set FLASK_APP and Run Migrations"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Add Sample Data"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Run Migrations"

[[workflows.workflow]]
name = "Run Flask App"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"
waitForPort = 5000

[[workflows.workflow]]
name = "Add Sample Courses"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python add_sample_courses.py"

[[workflows.workflow]]
name = "Check User"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python check_user.py testuser"

[[workflows.workflow]]
name = "Initialize Migration"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "flask db init"

[[workflows.workflow]]
name = "Test DB Connection"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python test_db_connection.py"

[[workflows.workflow]]
name = "Set FLASK_APP and Run Migrations"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "export FLASK_APP=main.py && flask db init && flask db migrate -m 'Increase password hash length' && flask db upgrade"

[[workflows.workflow]]
name = "Add Sample Data"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python add_sample_courses.py"

[[workflows.workflow]]
name = "Run Migrations"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "export FLASK_APP=main.py && flask db migrate -m 'Update relationships' && flask db upgrade"

[deployment]
run = ["sh", "-c", "python main.py"]

[[ports]]
localPort = 5000
externalPort = 80
